<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC 
"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="com.javawebtutor.model.User" table="users">
    
        <id name="userid" type="int" column="userid">
            <generator class="increment" />
        </id>
        
        <property name="unique_id">
            <column name="unique_id" />
        </property>
        
        <property name="name">
            <column name="name" />
        </property>
        
        <property name="email">
            <column name="email" />
        </property>
        
        <property name="idpass">
            <column name="idpass" />
        </property>
        
        <property name="phoneno">
            <column name="phoneno" />
        </property>
        
        <property name="status">
            <column name="status" />
        </property>
        
        <property name="created_at">
            <column name="created_at" />
        </property>
        
    </class>
</hibernate-mapping>