<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC 
"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="com.daniel.model.Article" table="articles">
        <id name="article_id" type="int" column="article_id">
            <generator class="increment" />
        </id>
        <property name="title">
            <column name="title" />
        </property>
        <property name="category">
            <column name="category" />
        </property>
        
    </class>
</hibernate-mapping>