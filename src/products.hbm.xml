<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC 
"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="com.daniel.model.Product" table="products">
        <id name="prodid" type="int" column="prodid">
            <generator class="increment" />
        </id>
        
        <property name="name">
            <column name="name" />
        </property>
        
        <property name="description">
            <column name="description" />
        </property>
        
        <property name="suggestedunitprice">
            <column name="suggestedunitprice" />
        </property>
        
        <property name="buyunitprice">
            <column name="buyunitprice" />
        </property>
        
        <property name="unitsinstock">
            <column name="unitsinstock" />
        </property>
        
        <property name="productcode">
            <column name="productcode" />
        </property>
        <property name="uuid">
            <column name="uuid" />
        </property>
    </class>
</hibernate-mapping>